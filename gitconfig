[alias]
    ## Shortcuts
    s = status
    d = diff
    co = checkout
    cm = commit

    # List aliases
    la = "!git config -l | grep alias | cut -c 7-"

    ## More complex stuff
    # Current git branch
    cb = rev-parse --abbrev-ref HEAD

    # Show a graph for all of the commits
    lg = log --decorate --oneline --graph --branches --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold blue)(%ar) %C(bold yellow)%d%C(reset) %C(green)%s%C(reset) %C(dim green)- %an%C(reset)'

    # Shwo only the commits accessible from this branch
    lo = log --oneline --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold blue)(%ar) %C(bold yellow)%d%C(reset) %C(green)%s%C(reset) %C(dim green)- %an%C(reset)'

[color]
    ui = true
    status = true
    branch = true
    diff = true

[core]
    pager = less -R
    preloadindex = true
	excludesfile = /home/vyenamandra/.gitignore

[mergetool]
    keepBackup = true

[push]
    default = simple

[grep]
    lineNumber = true

