[alias]
    # List aliases
    la = "!git config -l | grep alias | cut -c 7-"

    # Nice, colorful graph visualization
    lg = log --decorate --oneline --graph --branches --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold blue)(%ar) %C(bold yellow)%d%C(reset) %C(green)%s%C(reset) %C(dim green)- %an%C(reset)'
    tree = log --all --graph --decorate --oneline --simplify-by-decoration
    l = log --decorate --oneline --graph
    s = status
    d = diff
    co = checkout
    cm = commit
    whenadd = log --diff-filter=A --
[color]
    ui = true
    status = true
    branch = true
    diff = true
[core]
    pager = less -R
    preloadindex = true
	excludesfile = /home/vyenamandra/.gitignore
[mergetool "fugitive"]
    cmd = vim -f -c \"Gvdiff\" \"$MERGED\"
[mergetool]
    keepBackup = false
[merge]
    tool = fugitive
[push]
    default = simple
[init]
    templatedir = ~/.git_template
[grep]
    lineNumber = true

